import RepositorioPersona from '../Data/RepositorioPersona.ts';
import {Persona} from '../Entities/Persona';

export default class IndexVM {
    private personas: Persona[];
    constructor() {
        this.personas = RepositorioPersona.getPersonas();
    }

    public getPersonas(): Persona[] {
        return this.personas;
    }

    public setPersonas(personas: Persona[]): void {
        this.personas = personas;
    }

    public addPersona(persona: Persona): void {
        this.personas.push(persona);
    }

    public removePersona(index: number): void {
        this.personas.splice(index, 1);
    }

    public updatePersona(index: number, persona: Persona): void {
        this.personas[index] = persona;
    }

    public getPersona(index: number): Persona {
        return this.personas[index];
    }
}